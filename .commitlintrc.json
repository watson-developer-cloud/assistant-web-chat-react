{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [2, "always", ["ci", "chore", "docs", "feat", "fix", "perf", "refactor", "revert", "style"]],
    "footer-max-line-length": [0, "always"],
    "body-max-line-length": [0, "always"],
    "footer-leading-blank": [0, "always"]
  }
}